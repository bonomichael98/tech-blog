<section class="login-page">
    <div class="form-heading text-center">
        <h1>Log In</h1>
    </div>
    <div class="form-section d-flex justify-content-around">
        <form class="login-form">
            <div>
                <label for="email-login text-center">Email</label>
                <br>
                <input type="text" class="entry-field" id="email-login" />
            </div>
            <div>
                <label for="password-login text-center">Password</label>
                <br>
                <input type="password" class="entry-field" id="password-login" />
            </div>
            <div class="text-center">
                <button type="submit" class="login-signup-btn">Log In!</button>
            </div>
        </form>
    </div>

    <a href="/signup" class="sign-in-link">Sign up instead</a>
</section>

<script src="/login.js"></script>